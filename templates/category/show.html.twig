{% extends 'base.html.twig' %}

{% block title %}{{ 'categories_show.title' | trans({'%category_name%': category.name}) }}{% endblock %}

{% block body_class %}front-categories-show{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12 mt-3">
                <h2>{{ 'categories_show.title' | trans({'%category_name%': category.name}) }}</h2>
                <hr>
            </div>
        </div>
        
        <div class="row">
            {% for product in category.products %}
                <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                    <div class="card-wrapper mb-3">
                        {% include 'partials/components/cards/product_card.html.twig'%}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
